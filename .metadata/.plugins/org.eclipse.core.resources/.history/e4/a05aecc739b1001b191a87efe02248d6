	public List<MyfoodsDTO> selectAll() {
		// TODO 기록한 모든 리스트를 조회하는 메소드
		
		String sql = "SELECT * FROM view_일일섭취량;";
		PreparedStatement pStr = null ;
		
		
		try {
			pStr = dbConn.prepareStatement(sql);
			
			ResultSet rSet = pStr.executeQuery();
			
			List<MyfoodsDTO> mfList = new ArrayList<MyfoodsDTO>();
			
			while(rSet.next()) {
				MyfoodsDTO mfDTO = new MyfoodsDTO();
				
				mfDTO.setMf_date("mf_date");
				mfDTO.setMf_code("mf_date");
				mfDTO.setMf_name("mf_date");
				mfDTO.setMf_eat("mf_date");
				mfDTO.setMf_kcal("mf_date");
				mfDTO.setMf_protein("mf_date");
				mfDTO.setMf_fat("mf_date");
				mfDTO.setMf_car("mf_date");
				mfDTO.setMf_sugar("mf_date");
				
				
				private String mf_date;			//입력한 날짜
				private String mf_code;			//입력한 식품코드
				private String mf_name;			//입력한 식품명
				private Integer mf_eat;			//입려간 섭취향
				private String mf_kcal;			//섭취한 칼로리
				private String mf_protein;		//섭취한 단백질
				private String mf_fat;			//섭취한 지방
				private String mf_car;			//섭취한 탄수화물
				private String mf_sugar;		//섭취한 당류
				
				
				
				
				
				
			}
			
			
			
		} catch (SQLException e) {
			System.out.println("드라이브 연결 실패");
		}
		
		
		return null;
	}

